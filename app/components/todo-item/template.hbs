{{#if isEditing}}
  {{edit-todo class='edit' value=todo.title
                           focus-out='save'
                           insert-newline='save'}}
{{else}}
  <input type='checkbox' checked={{todo.isCompleted}} class='toggle' onchange={{action attrs.completeTodo}}>
  <label {{action 'editTodo' on='doubleClick'}}>{{todo.title}}</label>
  <button {{action attrs.deleteTodo}} class='destroy'></button>
{{/if}}
